{% extends 'mzInventarioBundle::layout.html.twig' %}

{% block title %} {{ parent() }} - Usuarios {% endblock %}

{% block pagetitle %} Editar Usuario {% endblock %}

{% block page %}
<div class="row-fluid">
    <div class="btn-toolbar">
        <a class="btn" href="{{ path('usuario') }}">
            <i class="icon-angle-left icon-large"></i> Volver
        </a>
    </div>
    <div class="btn-toolbar">
        <a class="btn btn-warning" href="{{ path('usuario_pass_edit', { 'id': entity.id }) }}">
            <i class="icon-edit icon-large"></i> Cambiar Password
        </a>
    </div>
    <div class="btn-toolbar">
        <form action="{{ path('usuario_delete', { 'id': entity.id }) }}" method="post" class="shitty-delete-form">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Seguro que desea eliminar este registro?');">
                <i class="icon-trash icon-large"></i> Borrar
            </button>
        </form>
    </div>
</div>
<form class="well" action="{{ path('usuario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-success">
            <i class="icon-save icon-large"></i> Guardar
        </button>
    </p>
</form>
{% endblock %}