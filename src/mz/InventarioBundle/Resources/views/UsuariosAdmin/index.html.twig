{% extends "mzInventarioBundle::layout.html.twig" %}
{% import 'mzInventarioBundle::macros.html.twig' as macros %}

{% block title %} {{ parent() }} - Usuarios {% endblock %}

{% block pagetitle %} Usuarios {% endblock %}

{% block flashmessages %}
    {{ parent() }}
    {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
    {% endif %}
{% endblock %}

{% block page %}
<div class="btn-toolbar">
    {{ macros.btn_agregar('usuario_new') }}
</div>
    <div id="filters" class="btn-toolbar pull-right">
        <form action="{{ path('usuario') }}" method="post" {{ form_enctype(filterForm) }}>
            <div class="input-append">
                {{ form_widget(filterForm.q) }}
                {{ form_rest(filterForm) }}
                <button class="btn" type="submit" name="filter_action" value="search"><i class="icon-search"></i></button>
            </div>
        </form>
    </div>
<div class="well">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Username</th>
                <th>Email</th>
                <th>Isenabled</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('usuario_show', { 'id': entity.id }) }}">{{ entity.apellido }}, {{ entity.nombre }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.isEnabled }}</td>
                <td class="actions">
                    <a href="{{ path('usuario_show', { 'id': entity.id }) }}"><i class="icon-pencil"></i> </a>
                    <a href="{{ path('usuario_edit', { 'id': entity.id }) }}"><i class="icon-remove"></i> </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{{ pagerHtml|raw }}
{% endblock %}