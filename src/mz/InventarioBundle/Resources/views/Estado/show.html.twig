{% extends 'mzInventarioBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Estados
{% endblock %}

{% block pagetitle %} Estado {% endblock %}

{% block page %}

<div class="row-fluid">
    <div class="btn-toolbar">
        <a class="btn" href="{{ path('estado') }}">
            <i class="icon-angle-left icon-large"></i> Volver
        </a>
    </div>
    <div class="btn-toolbar">
        <a class="btn btn-primary" href="{{ path('estado_edit', { 'id': entity.id }) }}">
            <i class="icon-pencil icon-large"></i> Editar
        </a>
    </div>
    <div class="btn-toolbar">
        <form action="{{ path('estado_delete', { 'id': entity.id }) }}" method="post" class="shitty-delete-form">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Seguro que desea eliminar este registro?');">
                <i class="icon-trash icon-large"></i> Borrar
            </button>
        </form>
    </div>
</div>

<form class="well form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Nombre</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ entity.nombre }}</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Slug</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ entity.slug }}</span>
            </div>
        </div>
    </fieldset>
</form>
{% endblock %}