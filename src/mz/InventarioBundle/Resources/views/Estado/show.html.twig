{% extends 'mzInventarioBundle::layout.html.twig' %}
{% import 'mzInventarioBundle::macros.html.twig' as macros %}

{% block title %} {{ parent() }} - Estados {% endblock %}

{% block pagetitle %} Estado {% endblock %}

{% block page %}
    <div class="btn-toolbar">
        {{ macros.btn_volver('estado') }}
        {{ macros.btn_editar('estado_edit', entity.id) }}
        {{ macros.btn_borrarf('estado_delete', entity.id, delete_form) }}
    </div>
    <div class="well">
        <dl class="dl-horizontal">
            <dt>Nombre:</dt>
            <dd>{{ entity.nombre }}</dd>
        </dl>
    </div>
{% endblock %}