{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/mzinventario/css/bootstrap.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/mzinventario/css/bootstrap-responsive.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mzinventario/css/crud.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mzinventario/css/theme.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/mzinventario/css/font-awesome.css') }}" rel="stylesheet">
    <style type="text/css">
        #line-chart { height:300px; width:800px; margin: 0px auto; margin-top: 1em; }
        .brand { font-family: georgia, serif; }
        .brand .first { color: #ccc; font-style: italic; font-size: 30px; }
        .brand .second { color: #fff; font-weight: bold; }
    </style>
{% endblock %}

{% block navbar %}
    <div class="navbar-inner">
        <ul class="nav pull-right">
            <li id="fat-menu" class="dropdown">
                <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="icon-user"></i> [USER NAME]
                    <i class="icon-caret-down"></i>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="#" tabindex="-1">Perfil</a></li>
                    <li class="divider"> </li>
                    <li><a href="#" tabindex="-1">Salir</a></li>
                </ul>
            </li>
        </ul>
        <a class="brand" href="index.html"><span class="first">G4</span> <span class="second">Inventario</span></a>
    </div>
{% endblock %}

{% block sidenav %}
    <a href="#dashboard-menu" class="nav-header" data-toggle="collapse">
        <i class="icon-dashboard"></i>Inventario <i class="icon-chevron-up"></i>
    </a>
    <ul id="dashboard-menu" class="nav nav-list collapse in">
        <li><a class="mnu_link" href="{{ path('item') }}">Items</a></li>
        <li><a class="mnu_link" href="{{ path('prestamo') }}">Prestamos</a></li>
        <li><a href="{{ path('imagen') }}">Imágenes</a></li>
    </ul>

    <a href="#reports-menu" class="nav-header collapsed" data-toggle="collapse">
        <i class="icon-bar-chart"></i>Reportes <i class="icon-chevron-up"></i>
    </a>
    <ul id="reports-menu" class="nav nav-list collapse">
        <li ><a href="#">[REPORTES]</a></li>
    </ul>

    <a href="#configs-menu" class="nav-header collapsed" data-toggle="collapse">
        <i class="icon-cogs"></i>Configuración <i class="icon-chevron-up"></i>
    </a>
    <ul id="configs-menu" class="nav nav-list collapse">
        <li ><a class="mnu_link" href="{{ path('categoria') }}">Categorias</a></li>
        <li ><a class="mnu_link" href="{{ path('condicion') }}">Condiciones</a></li>
        <li ><a class="mnu_link" href="{{ path('estado') }}">Estados</a></li>
        <li ><a class="mnu_link" href="{{ path('ubicacion') }}">Ubicaciones</a></li>
    </ul>

    <a href="{{ path ('usuario')}}" class="nav-header mnu_link">
        <i class="icon-group"></i>Usuarios
    </a>
{% endblock %}

{% block content %}
    <section class="header">
        <div class="stats">
            {% block stats %}
                <p class="stat"><span class="number">53</span>tickets</p>
                <p class="stat"><span class="number">27</span>tasks</p>
                <p class="stat"><span class="number">15</span>waiting</p>
            {% endblock %}
        </div>

        <h1 class="page-title">{% block pagetitle %}Dashboard{% endblock %}</h1>
    </section>

    <section id="breadcrumb">
        {% block breadcrumb %}
            <ul class="breadcrumb">
                <li><a href="{{ path('item')}}">Home</a> <span class="divider">/</span></li>
                <li class="active">Dashboard</li>
            </ul>
        {% endblock %}
    </section>

    <section class="container-fluid">
        <div class="row-fluid">
            {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <strong>{{ flashMessage }}</strong>
                    {% endfor %}
                </div>
            {% endfor %}

            {% block flashmessages %}{% endblock %}

            {% block page %}{% endblock %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/mzinventario/js/jquery-1.7.2.min.js')}}" type="text/javascript"></script>
    <script src="{{ asset('bundles/mzinventario/js/bootstrap.js')}}"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        $('a.mnu_link').click(function(event){
            event.preventDefault();
            $('#content').load($(this).attr('href'));
        });
    });
    </script>
{% endblock %}
