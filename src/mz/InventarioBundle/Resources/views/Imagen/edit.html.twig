{% extends 'mzInventarioBundle::layout.html.twig' %}
{% import 'mzInventarioBundle::macros.html.twig' as macros %}

{% block title %} {{ parent() }} - Imágenes {% endblock %}

{% block pagetitle %} Editar Imágen {% endblock %}

{% block page %}

<div class="row-fluid">
    {{ macros.btn_volver('imagen') }}
    {{ macros.btn_borrarf('imagen_delete', entity.id, delete_form) }}
</div>

<form class="well" action="{{ path('imagen_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>{{ macros.btn_guardar('imagen') }}</p>
</form>
{% endblock %}