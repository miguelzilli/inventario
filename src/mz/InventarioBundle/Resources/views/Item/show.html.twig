{% extends 'mzInventarioBundle::layout.html.twig' %}
{% import 'mzInventarioBundle::macros.html.twig' as macros %}

{% block title %} {{ parent() }} - Items {% endblock %}

{% block pagetitle %} Item {% endblock %}

{% block page %}
    <div class="btn-toolbar">
        {{ macros.btn_volver('homepage') }}
        {{ macros.btn_editar('item_edit', entity.id) }}
        {{ macros.btn_borrarf('item_delete', entity.id, delete_form) }}
    </div>

<div class="well">
    <dl class="dl-horizontal">
        <dt>Id:</dt>
        <dd>{{ entity.id }}</dd>

        <dt>Nombre:</dt>
        <dd>{{ entity.nombre }}</dd>

        <dt>Marca:</dt>
        <dd>{{ entity.marca }}</dd>

        <dt>Modelo:</dt>
        <dd>{{ entity.modelo }}</dd>

        <dt>Serial Number:</dt>
        <dd>{{ entity.sn }}</dd>

        <dt>Fecha de Compra:</dt>
        <dd>{{ entity.fechaCompra|date('d-m-Y') }}</dd>

        <dt>Costo:</dt>
        <dd>{{ entity.costo }}</dd>

        <dt>Garantia:</dt>
        <dd>{{ entity.garantia }}</dd>

        <dt>Descripción:</dt>
        <dd>{{ entity.descripcion }}</dd>

        <dt>Código:</dt>
        <dd>{{ entity.codigo }}</dd>

        <dt>Creado:</dt>
        <dd>{{ entity.createdAt|date('d-m-Y') }}</dd>

        <dt>Actualizado:</dt>
        <dd>{{ entity.updatedAt|date('d-m-Y') }}</dd>
    </dl>
</div>
{% endblock %}