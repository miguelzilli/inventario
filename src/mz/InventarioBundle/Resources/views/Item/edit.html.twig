{% extends 'mzInventarioBundle::layout.html.twig' %}
{% import 'mzInventarioBundle::macros.html.twig' as macros %}

{% block title %} {{ parent() }} - Items {% endblock %}

{% block pagetitle %} Editar Item {% endblock %}

{% block page %}
    <div class="btn-toolbar">
        {{ macros.btn_volver('homepage') }}
        {{ macros.btn_borrarf('item_delete', entity.id, delete_form) }}
    </div>
    <form class="well" action="{{ path('item_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>{{ macros.btn_guardar('homepage') }}</p>
    </form>
{% endblock %}