{% extends "mzInventarioBundle::layout.html.twig" %}
{% import 'mzInventarioBundle::macros.html.twig' as macros %}

{% block title %} {{ parent() }} - Items {% endblock %}

{% block pagetitle %} Items {% endblock %}

{% block flashmessages %}
    {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
    {% endif %}
{% endblock %}

{% block page %}
<div class="btn-toolbar">
    {{ macros.btn_agregar('item_new') }}
    <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
        Filtrar <span class="caret"></span>
    </a>
</div>
<div id="filters" class="collapse">
    <form class="well" action="{{ path('homepage') }}" method="post" {{ form_enctype(filterForm) }}>
        {{ form_rest(filterForm) }}
        <p>
            <button class="btn" type="submit" name="filter_action" value="reset">Reset</button>
            <button class="btn btn-info" type="submit" name="filter_action" value="filter">Filtrar</button>
        </p>
    </form>
</div>

<div class="well">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Nº Serie</th>
                <th>Fecha de Compra</th>
                <th>Costo</th>
                <th>Garantía</th>
                <th>Descripción</th>
                <th>Código</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.marca }}</td>
                <td>{{ entity.modelo }}</td>
                <td>{{ entity.sn }}</td>
                <td>{% if entity.fechaCompra %}{{ entity.fechaCompra|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.costo }}</td>
                <td>{{ entity.garantia }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.codigo }}</td>
                <td class="actions">
                    <a href="{{ path('item_show', { 'id': entity.id }) }}"><i class="icon-pencil"></i> </a>
                    <a href="{{ path('item_edit', { 'id': entity.id }) }}"><i class="icon-remove"></i> </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{{ pagerHtml|raw }}
{% endblock %}