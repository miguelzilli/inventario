{% extends app.request.isXmlHttpRequest ? "mzInventarioBundle::layout_ajax.html.twig" : "mzInventarioBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - Items {% endblock %}

{% block pagetitle %} Items {% endblock %}

{% block flashmessages %}
    {{ parent() }}
    {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
    {% endif %}
{% endblock %}

{% block page %}
<div class="row-fluid">
    <div class="btn-toolbar">
        <a class="btn btn-primary" href="{{ path('item_new') }}">
            <i class="icon-plus"></i> Agregar
        </a>
    </div>
    <div class="btn-toolbar">
        <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
            Filtrar <span class="caret"></span>
        </a>
    </div>
</div>
<div id="filters" class="collapse">
    <form class="well" action="{{ path('item') }}" method="post" {{ form_enctype(filterForm) }}>
        {{ form_row(filterForm.id) }}
        {{ form_row(filterForm.nombre) }}
        {{ form_row(filterForm.marca) }}
        {{ form_row(filterForm.modelo) }}
        {{ form_row(filterForm.sn) }}
        {{ form_row(filterForm.fechaCompra) }}
        {{ form_row(filterForm.costo) }}
        {{ form_row(filterForm.garantia) }}
        {{ form_row(filterForm.descripcion) }}
        {{ form_row(filterForm.codigo) }}
        {{ form_row(filterForm.createdAt) }}
        {{ form_row(filterForm.createdBy) }}
        {{ form_row(filterForm.updatedAt) }}
        {{ form_row(filterForm.updatedBy) }}
        {{ form_rest(filterForm) }}

        <p>
            <button type="submit" name="filter_action" value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
            <button type="submit" name="filter_action" value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </p>
    </form>
</div>

<div class="well">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>SN</th>
                <th>Fechacompra</th>
                <th>Costo</th>
                <th>Garantia</th>
                <th>Descripcion</th>
                <th>Codigo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.marca }}</td>
                <td>{{ entity.modelo }}</td>
                <td>{{ entity.sn }}</td>
                <td>{% if entity.fechaCompra %}{{ entity.fechaCompra|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{{ entity.costo }}</td>
                <td>{{ entity.garantia }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.codigo }}</td>
                <td class="actions">
                    <a href="{{ path('item_show', { 'id': entity.id }) }}"><i class="icon-pencil"></i> </a>
                    <a href="{{ path('item_edit', { 'id': entity.id }) }}"><i class="icon-remove"></i> </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

    {{ pagerHtml|raw }}
{% endblock %}