{% extends 'mzInventarioBundle::layout.html.twig' %}

{% block title %} {{ parent() }} - Prestamos {% endblock %}

{% block pagetitle %} Prestamos {% endblock %}


{% block flashmessages %}
        {% if form_errors(filterForm) %}
            <div class="alert alert-block alert-error fade in form-errors">
                {{ form_errors(filterForm) }}
            </div>
        {% endif %}
{% endblock %}

{% block page %}
<div class="row-fluid">
    <div class="btn-toolbar">
        <a class="btn btn-primary" href="{{ path('prestamo_new') }}">
            <i class="icon-plus"></i> Agregar
        </a>
    </div>
    <div class="btn-toolbar">
        <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
            Filtrar <span class="caret"></span>
        </a>
    </div>
</div>

<div class="row-fluid">
    <div id="filters" class="collapse">
        <form class="well" action="{{ path('prestamo') }}" method="post" {{ form_enctype(filterForm) }}>
            {{ form_row(filterForm.id) }}
            {{ form_row(filterForm.apellido) }}
            {{ form_row(filterForm.nombre) }}
            {{ form_row(filterForm.dni) }}
            {{ form_row(filterForm.fecha) }}
            {{ form_row(filterForm.fechaDevolucion) }}
            {{ form_row(filterForm.observaciones) }}
            {{ form_row(filterForm.createdAt) }}
            {{ form_row(filterForm.createdBy) }}
            {{ form_row(filterForm.updatedAt) }}
            {{ form_row(filterForm.updatedBy) }}
            {{ form_rest(filterForm) }}
            <p>
                <button class="btn" type="submit" name="filter_action" value="reset">Reset</button>
                <button class="btn btn-info" type="submit" name="filter_action" value="filter">Filtrar</button>
            </p>
        </form>
    </div>
</div>

<div class="well">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Dni</th>
                <th>Fecha</th>
                <th>Devuelto el</th>
                <th>Observaciones</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('prestamo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.apellido }}, {{ entity.nombre }}</td>
                <td>{{ entity.dni }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('d-m-Y') }}{% endif %}</td>
                <td>{% if entity.fechaDevolucion %}{{ entity.fechaDevolucion|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.observaciones }}</td>
                <td class="actions">
                    <a href="{{ path('prestamo_show', { 'id': entity.id }) }}"><i class="icon-pencil"></i> </a>
                    <a href="{{ path('prestamo_edit', { 'id': entity.id }) }}"><i class="icon-remove"></i> </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{{ pagerHtml|raw }}
{% endblock %}