{% extends 'mzInventarioBundle::layout.html.twig' %}
{% import 'mzInventarioBundle::macros.html.twig' as macros %}

{% block title %} {{ parent() }} - Categorías {% endblock %}

{% block pagetitle %} Agregar Categoría {% endblock %}

{% block page %}
    <div class="btn-toolbar">
        {{ macros.btn_volver('categoria') }}
    </div>
    <form class="well" action="{{ path('categoria_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>{{ macros.btn_guardar() }}</p>
    </form>
{% endblock %}