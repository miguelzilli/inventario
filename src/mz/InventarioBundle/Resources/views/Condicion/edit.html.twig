{% extends 'mzInventarioBundle::layout.html.twig' %}
{% import 'mzInventarioBundle::macros.html.twig' as macros %}

{% block title %} {{ parent() }} - Condiciones {% endblock %}

{% block pagetitle %} Editar Condici√≥n {% endblock %}

{% block page %}
    <div class="btn-toolbar">
        {{ macros.btn_volver('condicion') }}
        {{ macros.btn_borrarf('condicion_delete', entity.id, delete_form) }}
    </div>
    <form class="well" action="{{ path('condicion_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>{{ macros.btn_guardar('condicion') }}</p>
    </form>
{% endblock %}