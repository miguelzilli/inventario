{% extends 'G4InventarioBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Ubicaciones
{% endblock %}

{% block pagetitle %}
    Ubicaciones
{% endblock %}

{% block page %}
<div class="row-fluid">
    <div class="row-fluid">
        {% if form_errors(filterForm) %}
            <div class="alert alert-block alert-error fade in form-errors">
                {{ form_errors(filterForm) }}
            </div>
        {% endif %}
    </div>
    <div class="row-fluid inline-actions">
        <div class="btn-toolbar">
            <a class="btn btn-primary" href="{{ path('ubicacion_new') }}">
                <i class="icon-plus"></i> Agregar
            </a>
        </div>
        <div class="filters-right">
            <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
                Filtrar <span class="caret"></span>
            </a>
        </div>
    </div>
    <div class="row-fluid">
        <div id="filters" class="collapse">
            <form class="well" action="{{ path('ubicacion') }}" method="post" {{ form_enctype(filterForm) }}>
                {{ form_row(filterForm.nombre) }}
                {{ form_row(filterForm.slug) }}
                {{ form_rest(filterForm) }}
                <p>
                    <button type="submit" name="filter_action" value="reset">Reset</button>
                    <button type="submit" name="filter_action" value="filter">Filtrar</button>
                </p>
            </form>
        </div>
    </div>
    <div class="well">
        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Slug</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>
                        <a href="{{ path('ubicacion_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a>
                    </td>
                    <td>{{ entity.slug }}</td>
                    <td class="actions">
                        <a href="{{ path('ubicacion_show', { 'id': entity.id }) }}"><i class="icon-pencil"></i> </a>
                        <a href="{{ path('ubicacion_edit', { 'id': entity.id }) }}"><i class="icon-remove"></i> </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ pagerHtml|raw }}
</div>
{% endblock %}